<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/palette_text_white_tertiary"
    android:orientation="vertical"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="16dp"
        android:text="{fa-close}"
        android:textSize="24sp"
        />
    <com.joanzapata.iconify.widget.IconButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="16dp"
        android:text="Next"
        />
  </RelativeLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        >
      <com.joanzapata.iconify.widget.IconButton
          android:id="@+id/new_photo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="{md-camera} New shot"
          />

      <com.joanzapata.iconify.widget.IconButton
          android:id="@+id/new_clip"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="{md-videocam} New clip"
          />
    </LinearLayout>

  </LinearLayout>


  <android.support.v7.widget.RecyclerView
      android:id="@+id/imagesRecycleView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#f00"
      />


</LinearLayout>